<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/background_light</item>

    </style>

    <style name="DrawerMenuStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/umeng_socialize_fade_in</item>
        <item name="android:windowExitAnimation">@anim/umeng_socialize_fade_out</item>
    </style>

    <style name="popupAnimation2">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="user_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="user_info_text_v" parent="user_info_text">
        <item name="android:maxLength">12</item>
    </style>

    <style name="user_info_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/home_gerenziliao_jiantou</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
    </style>

    <style name="home_option_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="home_option_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/fragment_home_text</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="houseTag">
        <item name="android:textColor">@color/white_pure</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="map_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/text_dark_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="progressBarStyleHorizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@color/dark_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="ToolBarStyle_RedSetting" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@color/text_red</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!-- 分享对话框样式 start -->
    <style name="dialog_content_share_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_content_share_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/regist_forget_bg_pre</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog_bottom" parent="@style/dialog_common">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="newhouse_property">
        <item name="android:layout_width">@dimen/newhouse_property_params_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">@dimen/newhouse_property_text_size</item>
    </style>
    <style name="newhouse_property_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sub_title</item>
        <item name="android:textSize">@dimen/newhouse_property_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="newhouse_property_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ExpandMenuPopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

</resources>
