<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_pure"
        android:elevation="5dp"
        android:fitsSystemWindows="true"
        app:theme="@style/ToolBarStyle">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Title"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_17sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_avatar"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    style="@style/user_info_text_v"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="头像" />

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_into"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_into"
                    style="@style/user_info_imageview"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/relative_nicename"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/user_info_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/tv_nicename"
                    style="@style/user_info_text_v"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_nicename" />

                <ImageView
                    android:id="@+id/img_nicename"
                    style="@style/user_info_imageview" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="left|center_vertical"
        android:padding="@dimen/margin_10dp"
        android:text="业主信息验证（以下信息为保密不公开信息）"
        android:textColor="#ff929292" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_property"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/user_info_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="小区" />

                <TextView
                    android:id="@+id/tv_property"
                    style="@style/user_info_text_v"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_property" />

                <ImageView
                    android:id="@+id/img_property"
                    style="@style/user_info_imageview" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/relative_name"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/user_info_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="真实姓名" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/user_info_text_v"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_name" />

                <ImageView
                    android:id="@+id/img_name"
                    style="@style/user_info_imageview" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/relative_build"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/user_info_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="楼栋号" />

                <TextView
                    android:id="@+id/tv_build"
                    style="@style/user_info_text_v"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_build" />

                <ImageView
                    android:id="@+id/img_build"
                    style="@style/user_info_imageview" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/relative_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/user_info_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="预留手机号" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/user_info_text_v"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_phone" />

                <ImageView
                    android:id="@+id/img_phone"
                    style="@style/user_info_imageview" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>