<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="83dp"
                android:layout_height="83dp"
                 />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/img_head"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/img_head"
                android:textColor="@color/text_black_38"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_toRightOf="@+id/img_head"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_13sp" />

            <RelativeLayout
                android:id="@+id/frame_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_head"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/img_head"
                android:layout_marginRight="@dimen/margin_5dp"
                >

                <!--<TextView-->
                <!--android:id="@+id/tv_send_coupon"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="left"-->
                <!--android:text="已抢90张"-->
                <!--android:textColor="@color/cut_line"-->
                <!--android:textSize="@dimen/text_12sp" />-->
                <TextView
                    android:id="@+id/tv_price_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_price_coupon"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv_price_coupon"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_13sp" />

                <RelativeLayout
                    android:id="@+id/roundlayout_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_10dp"
                    >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/youhui_ico_sj_red" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:text="sdfsdf"
                        android:layout_toRightOf="@+id/img_icon"
                        android:textColor="@color/btn_red"
                        android:textSize="@dimen/text_13sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_pull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_toRightOf="@+id/img_head">


                <Button
                    android:id="@+id/btn_get"
                    android:layout_width="64dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@drawable/selector_item_round_red"
                    android:text="领取"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_13sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_last_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/relative_pull"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:textColor="@color/cut_line"
                android:textSize="@dimen/text_12sp"
                android:layout_marginRight="@dimen/margin_5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>