<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/wuyeReply"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageView android:id="@+id/wuyeReplyIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ico_wuyefk"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"/>



        <LinearLayout android:id="@+id/wuyeReplyRight"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView android:id="@+id/unreadWuyeReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ico_unread_msg"
                android:text="3"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="2dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/wuyeReplyIcon"
            android:layout_toLeftOf="@id/wuyeReplyRight"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView android:id="@+id/wuyeReplyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_deep"
                android:text="物业反馈"
                android:textSize="14sp"/>

            <TextView android:id="@+id/wuyeReplySummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_pressed"
                android:textSize="13sp"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/cut_line" />

</LinearLayout>