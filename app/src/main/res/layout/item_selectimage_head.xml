<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/selectImageSize"
        android:layout_height="@dimen/selectImageSize"
        android:gravity="center"
        android:background="@drawable/selector_item_round"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
    <ImageView android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_red_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <TextView android:layout_below="@id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="添加照片"
        android:textSize="12sp"
        android:textColor="#FFFF3030"/>
    </RelativeLayout>

</RelativeLayout>