<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


  <RelativeLayout
      android:id="@+id/rl_bannerview"
      android:layout_width="fill_parent"
      android:layout_height="200dip"
      android:visibility="visible">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_bannerview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/linearLayout_banner_point"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

    </LinearLayout>
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_xiaoqu"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_jianjie"/>

      <TextView
          style="@style/home_option_item_text"

          android:text="正兴简介"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_jiaofei"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_dongtai"/>

      <TextView
          style="@style/home_option_item_text"

          android:text="社区动态"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_baoxiu"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_jiaofei"/>

      <TextView
          style="@style/home_option_item_text"

          android:text="物业缴费"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_passport"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_baoxiu"/>

      <TextView
          style="@style/home_option_item_text"

          android:text="物业报修"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_express"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_gonggao"/>

      <TextView
          style="@style/home_option_item_text"

          android:text="物业公告"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <!--<LinearLayout style="@style/home_option_item">-->

    <!--<ImageView-->
    <!--android:layout_width="37dp"-->
    <!--android:layout_height="37dp"-->
    <!--android:src="@mipmap/home_ico_gonggao" />-->

    <!--<TextView-->
    <!--style="@style/home_option_item_text"-->

    <!--android:text="物业公告" />-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:id="@+id/buyHouse"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_xqwuyou"/>

      <TextView
          style="@style/home_option_item_text"
          android:text="小区无忧"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rentHouse"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_xinfang"/>

      <TextView
          style="@style/home_option_item_text"
          android:text="新房"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_snzx"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_zhuangxiu"/>

      <TextView
          style="@style/home_option_item_text"
          android:text="室内装修"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_glcs"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_changshi"/>

      <TextView
          style="@style/home_option_item_text"
          android:text="购房常识"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_more"
        style="@style/home_option_item">

      <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@mipmap/home_ico_gengduo"/>

      <TextView
          style="@style/home_option_item_text"
          android:text="更多"/>
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/cut_line"/>

  <LinearLayout
      android:id="@+id/relative_news"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="15dp"
        android:paddingTop="@dimen/margin_10dp"
        android:text="新闻头条"
        android:textColor="@color/btn_red"
        android:textSize="@dimen/text_13sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:background="@color/cut_line"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"/>

    <com.miuhouse.zxcommunity.widget.PublicNoticeView
        android:id="@+id/tv_public_notice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:gravity="center"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/cut_line"/>

  <ImageView
      android:id="@+id/img_huodong"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:scaleType="fitXY"

  />
  <!--android:layout_marginLeft="@dimen/margin_10dp"-->
  <!--android:layout_marginRight="@dimen/margin_10dp"-->
  <!--android:layout_marginTop="@dimen/margin_10dp"-->


  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="10dp"
      android:background="@color/cut_line"/>

  <LinearLayout
      android:id="@+id/linear_coupon"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:orientation="horizontal"
      android:visibility="gone">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

      <TextView
          android:id="@+id/tv_coupon_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="10dp"
          android:paddingTop="3dp"
          android:textColor="@color/text_purple"
          android:textSize="@dimen/text_15"/>

      <TextView
          android:id="@+id/tv_coupon_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="10dp"
          android:paddingTop="3dp"
          android:text="优惠不断抢不停"
          android:textColor="#ffbcbcbc"
          android:textSize="@dimen/text_13sp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_10dp"
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:paddingBottom="@dimen/margin_10dp">


        <TextView
            android:id="@+id/roundTv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="@color/text_black_64"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/roundTv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"
            android:textColor="@color/text_black_64"
            android:textSize="16sp"/>

        <com.miuhouse.zxcommunity.widget.RoundTextView
            android:id="@+id/roundTv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textColor="@color/text_black_64"
            android:textSize="16sp"/>
      </LinearLayout>

      <com.miuhouse.zxcommunity.widget.MyRoundImageView
          android:id="@+id/img_coupon"
          android:layout_width="@dimen/youhuiquanSize"
          android:layout_height="@dimen/youhuiquanSize"
          android:layout_gravity="center_horizontal"
          android:scaleType="centerCrop"/>

      <ImageView
          android:id="@+id/defaultCoupon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:src="@mipmap/home_pt_youhuiquan"
          android:visibility="gone"/>

      <RelativeLayout
          android:id="@+id/getQuan"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@color/bg_blue">

        <TextView
            android:id="@+id/tv_getQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无优惠"
            android:textColor="@color/white_pure"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_white_reverse"/>
      </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/cut_line"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sellHouseNeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/relativelayout_selector"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tv_sell_house_need"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="@dimen/margin_5dp"
              android:text="我要买房"
              android:textColor="#ffff4141"
              android:textSize="@dimen/text_13sp"/>

          <TextView
              android:id="@+id/tv_sell_house_need_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="3dp"
              android:text="好房源 抢先得"
              android:textColor="#ffbcbcbc"
              android:textSize="@dimen/text_12sp"/>

          <ImageView
              android:id="@+id/img_sell_house_need"
              android:layout_width="78dp"
              android:layout_height="50dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="@dimen/margin_5dp"
              android:scaleType="fitXY"/>
        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cut_line"/>

        <LinearLayout
            android:id="@+id/leaseHouseNeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/relativelayout_selector"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tv_let_title_need"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="@dimen/margin_5dp"
              android:text="我要出租"
              android:textColor="#ffff7930"
              android:textSize="@dimen/text_13sp"/>

          <TextView
              android:id="@+id/tv_let_description_need"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="3dp"
              android:text="好房源 抢先得"
              android:textColor="#ffbcbcbc"
              android:textSize="@dimen/text_12sp"/>

          <ImageView
              android:id="@+id/img_let_need"
              android:layout_width="78dp"
              android:layout_height="50dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="@dimen/margin_5dp"
              android:scaleType="fitXY"/>
        </LinearLayout>

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/cut_line"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sellHouse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/relativelayout_selector"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tv_sell_house"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="@dimen/margin_5dp"
              android:text="我要卖房"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_13sp"/>

          <TextView
              android:id="@+id/tv_sell_house_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="3dp"
              android:text="掌上交易更便捷"
              android:textColor="#ffbcbcbc"
              android:textSize="@dimen/text_12sp"/>

          <ImageView
              android:id="@+id/img_sell_house"
              android:layout_width="78dp"
              android:layout_height="50dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="@dimen/margin_5dp"
              android:scaleType="fitXY"/>
        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cut_line"/>

        <LinearLayout
            android:id="@+id/leaseHouse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/relativelayout_selector"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tv_let_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="@dimen/margin_5dp"
              android:text="帮你出租"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_13sp"/>

          <TextView
              android:id="@+id/tv_let_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_10dp"
              android:paddingTop="3dp"
              android:text="闲置房源有去处"
              android:textColor="#ffbcbcbc"
              android:textSize="@dimen/text_12sp"/>

          <ImageView
              android:id="@+id/img_let"
              android:layout_width="78dp"
              android:layout_height="50dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="@dimen/margin_5dp"
              android:scaleType="fitXY"/>
        </LinearLayout>

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/cut_line"/>
</LinearLayout>
